@model IQueryable<Product>

@{
    ViewData["Title"] = "Product List";
}

<div class="container mt-4">
    <h2 class="text-center">Product List</h2>

    <div class="mb-3 text-end">
        <a asp-action="AddProduct" asp-controller="Home" class="btn btn-success">Add New Product</a>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Created Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Price.ToString("N2") So'm</td>
                        <td>@product.CreatedDate.ToString("g")</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Home" asp-route-id="@product.Id" class="btn btn-primary btn-sm">Update</a>
                            <a asp-action="ConfirmRemoveProduct" asp-controller="Home" asp-route-id="@product.Id" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">No products available.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
